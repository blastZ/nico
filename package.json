{
  "name": "@blastz/nico",
  "version": "0.18.7",
  "description": "Backend framework build on koa",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/blastZ/nico.git"
  },
  "scripts": {
    "tsc": "tsc",
    "tsc-watch": "tsc -w",
    "test": "jest",
    "lint": "eslint --fix --ignore-path .gitignore 'src/**/*' 'test/**/*.ts' 'typings/**/*'",
    "format": "prettier --ignore-path .gitignore --write .",
    "build": "rm -rf dist && npm run tsc && cp package.json README.md ./dist",
    "push": "npm run test && npm run format && npm run lint && npm run build && cd ./dist && npm publish --access public --registry=https://registry.npmjs.org"
  },
  "keywords": [
    "nico",
    "web",
    "app",
    "http",
    "application",
    "mvc",
    "framework",
    "middleware",
    "rank",
    "koa",
    "node",
    "typescript"
  ],
  "author": "blastz",
  "license": "MIT",
  "dependencies": {
    "@koa/router": "^10.0.0",
    "@types/koa": "^2.11.6",
    "@types/koa-static": "^4.0.1",
    "@types/koa__router": "^8.0.3",
    "chalk": "^4.1.0",
    "formidable": "^1.2.2",
    "joi": "^17.3.0",
    "koa": "^2.13.0",
    "koa-body": "^4.2.0",
    "koa-static": "^5.0.0",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0"
  },
  "devDependencies": {
    "@blastz/eslint-config-nico": "^0.1.0",
    "@types/jest": "^26.0.19",
    "@types/supertest": "^2.0.10",
    "eslint": "^7.16.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "supertest": "^6.0.1",
    "typescript": "^4.1.3"
  },
  "files": [
    "src/**/*",
    "typings/**/*"
  ]
}
